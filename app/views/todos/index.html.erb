<div class="row" id="todo-list">
  <% @todos.each do |todo| %>
    <div class="row" id="todo-items">
      <% if todo.is_completed %>
          <div class="completed col-xs-12 col-sm-1 col-md-1 col-lg-1">
            <%= link_to complete_todo_path(todo.id), method: :patch do %>
              <i style="opacity: 0.4" class="fa fa-check-square-o"></i>
            <% end %>
          </div>
          <div class="todo-item col-xs-12 col-sm-8 col-md-8 col-lg-8">
            <div class="row">
              <p class="todo-info col-xs-12 col-sm-8" style="opacity: 0.4" ><strike><%= todo.name %></strike></p>
              <p class="todo-date col-xs-12 col-sm-4" style="opacity: 0.4"><strike><%= todo.due_date %></strike></p>
            </div>
          </div>
      <% else %>
          <div class="completed col-xs-12 col-sm-1 col-md-1 col-lg-1">
            <%= link_to complete_todo_path(todo.id), method: :patch do %>
              <i class="fa fa-square-o"></i>
            <% end %>
          </div>
          <div class="todo-item col-xs-12 col-sm-8 col-md-8 col-lg-8">
            <div class="row">
              <p class="todo-info col-xs-12 col-sm-8"><%= todo.name %></p>
              <p class="todo-date col-xs-12 col-sm-4"><%= todo.due_date %></p>
            </div>
          </div>
      <% end %>
          <div class="todo-btn col-xs-6 col-xs-offset-3 col-sm-3 col-sm-offset-0 col-ms-3 col-lg-3">
            <%= link_to todo_path(todo) do %>
              <i class="fa fa-file-text"></i>
            <% end %>
            <%= link_to edit_todo_path(todo) do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to todo_path(todo), method: :delete, data: { confirm: "Are you sure? " } do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </div>
          <div class="col-xs-3"></div>
          <div class="clearfix visible-xs-block"></div>
    </div>
  <% end %>
</div>
<hr>
<div class="links"><%= link_to "New Todo List", new_todo_path ,class: "btn btn-default" %></div>
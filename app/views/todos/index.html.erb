<div class="row clearfix">
    <% @todos.each do |todo| %>
      <% if todo.completed? %>
        <div class="todo-list col-xs-12 col-sm-12 col-md-12 col-lg-12 clearfix">
          <div class="completed col-xs-1 col-sm-1 col-md-1 col-lg-1">
            <%= link_to complete_todo_path(todo.id), method: :patch do %>
              <i style="opacity: 0.4;" class="fa fa-check-square-o fa-2x"></i>
            <% end %>
          </div>
          <div class="todo-item col-xs-9 col-sm-9 col-md-9 col-lg-9">
            <p style="opacity: 0.4;" class="todo-info col-xs-8 col-sm-8 col-md-8 col-lg-8"><strike><%= todo.name %></strike></p>
            <p style="opacity: 0.4;" class="todo-date col-xs-4 col-sm-4 col-md-4 col-lg-4"><strike><%= todo.due_date %></strike></p>
          </div>
      <% else %>
        <div class="todo-list col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <div class="completed col-xs-1 col-sm-1 col-md-1 col-lg-1">
            <%= link_to complete_todo_path(todo.id), method: :patch do %>
              <i class="center-block fa fa-square-o fa-2x"></i>
            <% end %>
          </div>
          <div class="todo-item col-xs-9 col-sm-9 col-md-9 col-lg-9">
            <p class="todo-info col-xs-8 col-sm-8 col-md-8 col-lg-8"><%= todo.name %></p>
            <p class="todo-date col-xs-4 col-sm-4 col-md-4 col-lg-4"><%= todo.due_date %></p>
          </div>
      <% end %>
        <div class="todo-btn col-xs-2 col-sm-2 col-ms-2 col-lg-2">
          <%= link_to todo_path(todo) do %>
            <i class="fa fa-file-text fa-2x"></i>
          <% end %>
          <%= link_to edit_todo_path(todo) do %>
            <i class="fa fa-edit fa-2x"></i>
          <% end %>
          <%= link_to todo_path(todo), method: :delete, data: { confirm: "Are you sure? " } do %>
            <i class="fa fa-trash fa-2x"></i>
          <% end %>
        </div>
      </div>
  <% end %>
</div>
<hr>
<div class="links center-block"><%= link_to "New Todo List", new_todo_path ,class: "btn btn-default" %></div>